	"spacing": 0, // Gaps between modules (4px)
	// Choose the order of the modules
	"modules-left": [
		"hyprland/workspaces",
		"cpu",
		"memory",
		"custom/media",
		"custom/notification"
	],
	"modules-center": [
		"wlr/taskbar",
	],
	"modules-right": [
		"mpd",
		"pulseaudio",
		"network",
		"clock",
		"battery",
		"tray",
	],
